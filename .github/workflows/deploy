# .github/workflows/deploy.yml

name: Deploy Simple Platform

on:
  push:
    branches: ["master"]
  workflow_dispatch:
  pull_request:
    branches: ["master"]

permissions:
  contents: write
  pages: write
  id-token: write

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      # إعداد Node.js
      - uses: actions/setup-node@v4
        with:
          node-version: '20' 
          cache: 'npm'
          
      # تثبيت الحزم
      - run: npm install

      # عملية البناء (Vite)
      - name: Build project
        run: npm run build 

      # رفع ملفات dist كـ Artifact
      - name: Upload GitHub Pages artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: './dist'

      # نشر Artifact
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
